{
  "network": {
    "AP_SSID": "iotdoor",
    "AP_password": "iotdoor",
    "AP_channel": 6,
    "AP_SSID_hidden": false,
    "AP_max_connection": 4,
    "WiFi_SSID": "wifissid",
    "WiFi_password": "wifipass",
    "ip_address": "192.168.1.2",
    "subnet": "255.255.255.0",
    "dns_Server": "192.168.1.1",
    "hostname": "iotdoor"
  },
  "mqtt": {
    "enabled": true,
    "reconnect_mqtt": true,
    "server": "broker.ddns.net",
    "port": 1883,
    "id_name": "iot-door",
    "enable_user_and_pass": true,
    "user_name": "user_name",
    "user_password": "user_password",
    "enable_certificates": false,
    "ca_file": "/certs/ca.crt",
    "cert_file": "/certs/cert.der",
    "key_file": "/certs/private.der",
    "pub_topic": [
      "/iot-button/feed"
    ],
    "sub_topic": [
      "/iot-button/topi1",
      "/iot-button/topi2",
      "/iot-button/topi3"
    ]
  },
  "services": {
    "OTA": true,
    "FTP": {
      "enabled": true,
      "user": "paclema",
      "password": "paclema"
    },
    "WebSockets": {
      "enabled": true,
      "publish_time_ms": 50
    },
    "deep_sleep": {
      "enabled": false,
      "mode": "WAKE_RF_DEFAULT",
      "mode_options": [
        "WAKE_RF_DEFAULT",
        "WAKE_RF_DISABLED",
        "WAKE_RFCAL",
        "WAKE_NO_RFCAL"
      ],
      "sleep_time": 60,
      "sleep_delay": 60
    },
    "light_sleep": {
      "enabled": false,
      "mode": "LIGHT_SLEEP_T",
      "mode_options": [
        "NONE_SLEEP_T",
        "LIGHT_SLEEP_T"
      ]
    }
  },
  "device": {
    "track_restart_counter": true,
    "loop_time_ms": 20,
    "publish_time_ms":30000
  },
  "PeopleCounter": {
    "vl53l1x": {
      "enabled": true,
      "debug": true,
      "time_budget_ms": 20,
      "XSHUT_pin": 16,
      "I2c_address": 42,
      "distance_mode_options": [
        "Short",
        "Medium",
        "Long",
        "Unknown"
      ]
    },
    "ROI": {
      "enabled": true,
      "zones" : 4
    },
    "LED_strip" : {
      "enabled": true,
      "pin": 0,
      "count": 1,
      "brightness": 255
    },
    "debug": true,
    "person_threshold_mm": 800

  },
  "info": {
    "restart_counter": 0,
    "fw_version": "v0.1",
    "repo": "github.com/paclema/iot_button"
  }
}
