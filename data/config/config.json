{
  "network": {
    "AP_SSID": "iotdevice",
    "AP_password": "iotdevice",
    "AP_channel": 6,
    "AP_SSID_hidden": false,
    "AP_max_connection": 4,
    "WiFi_SSID": "wifissid",
    "WiFi_password": "wifipass",
    "connection_retries": 0,
    "ip_address": "192.168.1.2",
    "subnet": "255.255.255.0",
    "dns_Server": "192.168.1.1",
    "hostname": "iotdevice",
    "enable_NAT": false
  },
  "mqtt": {
    "enabled": false,
    "reconnect_mqtt": false,
    "server": "broker.ddns.net",
    "port": 1883,
    "id_name": "iot-button",
    "enable_user_and_pass": true,
    "user_name": "user_name",
    "user_password": "user_password",
    "enable_certificates": false,
    "ca_file": "/certs/ca.crt",
    "cert_file": "/certs/cert.der",
    "key_file": "/certs/private.der",
    "pub_topic": [
      "/iot-button/feed"
    ],
    "sub_topic": [
      "/iot-button/topi1",
      "/iot-button/topi2",
      "/iot-button/topi3"
    ]
  },
  "services": {
    "OTA": {
      "enabled": true
    },
    "FTP": {
      "enabled": true,
      "user": "paclema",
      "password": "paclema"
    },
    "WebSockets": {
      "enabled": true,
      "publish_time_ms": 100,
      "port": 81
    },
    "deep_sleep": {
      "enabled": false,
      "mode": "WAKE_RF_DEFAULT",
      "mode_options": [
        "WAKE_RF_DEFAULT",
        "WAKE_RF_DISABLED",
        "WAKE_RFCAL",
        "WAKE_NO_RFCAL"
      ],
      "sleep_time": 60,
      "sleep_delay": 60
    },
    "light_sleep": {
      "enabled": false,
      "mode": "LIGHT_SLEEP_T",
      "mode_options": [
        "NONE_SLEEP_T",
        "LIGHT_SLEEP_T"
      ]
    },
    "ntp": {
      "enabled": true,
      "ntpServer": "pool.ntp.org",
      "gmt_offset_sec": 0,
      "daylight_offset_sec": 3600
    }
  },
  "device": {
    "track_restart_counter": true,
    "loop_time_ms": 20,
    "publish_time_ms":100
  },
  "radar": {
    "motor_1":{
      "enabled": true,
      "debug": true,
      "control_pin": 0,
      "feedback_pin": 12,
      "angle_accuracy": 1,
      "motor_speed_pulse": 5,
      "servo_speed_ms/60": 600,
      "angle_offset": 0
    },
    "motor_2":{
      "enabled": true,
      "debug": true,
      "control_pin": 2,
      "feedback_pin": 13,
      "angle_accuracy": 1,
      "motor_speed_pulse": 5,
      "servo_speed_ms/60": 600,
      "angle_offset": 180
    },
    "vl53l1x_1": {
      "enabled": true,
      "debug": true,
      "time_budget_ms": 20,
      "XSHUT_pin": 16,
      "I2c_address": 42,
      "distance_mode": "Short",
      "distance_mode_options": [
        "Short",
        "Medium",
        "Long",
        "Unknown"
      ]
    },
    "vl53l1x_2": {
      "enabled": true,
      "debug": true,
      "time_budget_ms": 20,
      "XSHUT_pin": 14,
      "I2c_address": 43,
      "distance_mode": "Short",
      "distance_mode_options": [
        "Short",
        "Medium",
        "Long",
        "Unknown"
      ]
    },
    "HCSR04":{
      "enabled": false,
      "debug": false,
      "time_budget_ms": 50
    },
    "ROI": {
      "enabled": false,
      "zones": 2,
      "zone_1": [ 12, 15, 15, 0],
      "zone_2": [ 0, 15, 3, 0]
    },
    "angle_min": 80,
    "angle_max": 280,
    "debug": true
  },
  "info": {
    "restart_counter": 0,
    "fw_version": "v0.1",
    "repo": "github.com/paclema/iot_button"
  }
}
